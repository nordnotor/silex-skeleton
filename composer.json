{
  "name": "Base/Silex",
  "license": "MIT",
  "type": "project",
  "description": "The Silex base project.",
  "keywords": ["silex", "base", "project"],

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "require": {

    "illuminate/validation": "^5.4",
    "illuminate/translation": "^5.4",
    "illuminate/pagination": "^5.4",

    "symfony/asset": "^3.2",
    "symfony/config": "^3.3",
    "symfony/console": "^3.2",
    "symfony/security": "^3.3",
    "symfony/twig-bridge": "^3.3",
    "symfony/filesystem": "3.4.x-dev",

    "silex/silex": "^2.1",
    "predis/predis": "^1.1",
    "league/flysystem": "^1.0",
    "monolog/monolog": "^1.23",
    "jenssegers/mongodb": "^3.2",

    "fxp/composer-asset-plugin": "^1.3",
    "bower-asset/admin-lte": "^2.3",
    "bower-asset/magnific-popup": "^1.1",
    "bower-asset/bootstrap-fileinput": "^4.4",
    "bower-asset/toastr": "*",
    "bower-asset/chart.js": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7",
    "sorien/silex-pimple-dumper": "~2.0"
  },
  "config": {
    "fxp-asset": {
      "installer-paths": {
        "npm-asset-library": "web/assets/vendor",
        "bower-asset-library": "web/assets/vendor"
      }
    }
  }
}
